{
  "name": "democredit-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "migrate": "npx knex migrate:latest",
    "migrate:make": "npx knex migrate:make create_user_table",
    "build": "npm run clean && tsc -b tsconfig.build.json",
    "start": "node dist/index.js",
    "dev": "npm run migrate && nodemon --exec ts-node src/index.ts",
    "test:unit": "cross-env NODE_ENV=development jest -c jest.config.unit.ts",
    "test:e2e": "cross-env NODE_ENV=development jest -c jest.config.e2e.ts",
    "test:infra": "cross-env NODE_ENV=development jest -c jest.config.infra.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "knex": "^3.1.0",
    "mysql2": "^3.11.3",
    "redis": "^4.7.0",
    "ts-jest": "^29.2.5"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.5",
    "@types/redis": "^4.0.10",
    "cross-env": "^7.0.3",
